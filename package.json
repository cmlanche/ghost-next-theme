{
    "name": "ghost-next-theme",
    "description": "The default personal blogging theme for Ghost. Beautiful, minimal and responsive.",
    "demo": "https://cmlanche.com",
    "version": "0.0.3",
    "engines": {
        "ghost": ">=2.0.0",
        "ghost-api": "v2"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.png",
        "mobile": "assets/screenshot-mobile.png"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "author": {
        "name": "cmlanche",
        "email": "1204833748@qq.com",
        "url": "https://cmlanche.com"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme-next"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/cmlanche/ghost-next-theme"
    },
    "bugs": "https://github.com/cmlanche/ghost-next-theme/issues",
    "contributors": "https://github.com/cmlanche/ghost-next-theme/graphs/contributors",
    "devDependencies": {
        "@tryghost/release-utils": "0.3.2",
        "autoprefixer": "9.6.1",
        "beeper": "1.1.1",
        "cssnano": "4.1.10",
        "gscan": "2.7.0",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.1",
        "gulp-postcss": "8.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "4.2.0",
        "postcss-color-function": "4.1.0",
        "postcss-custom-properties": "8.0.11",
        "postcss-easy-import": "3.0.0",
        "pump": "3.0.0"
    },
    "config": {
        "posts_per_page": 2
    }
}
